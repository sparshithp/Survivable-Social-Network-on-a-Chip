doctype html
html
  include includes/head.jade
  script(src='/js/jquery.cookie.js')
  script(src='/js/people.js')
  title SSNoC - People
  body
    include includes/navbar.jade
    //div#navbar
    div.container
      br
      br
      div.well#myself.search_item
        div.row.user-row
          div.col-xs-3.col-sm-2.col-md-1.col-lg-1
            img(src="/img/green-dot.png" height=10)
            br
            img(src="/img/photo4.png" height=60)
          div.col-xs-8.col-sm-9.col-md-10.col-lg-10
            strong #{user_name}
            br
            case statusCode
              when "GREEN"
               img(class='img-circle' src="/img/sts_ok.png" height=20)       
               strong #{'I Am OK'}
              when "YELLOW"
               img(class='img-circle' src="/img/sts_help.png" height=20) 
               strong #{'Need Help'} 
              when "RED"
               img(class='img-circle' src="/img/sts_danger.png" height=20)
               strong #{'Facing Threatening Emergency'}        
            br
            | LocationInfo: #{locationDesc}.
            br
            | LastUpdatedTime: #{lastPostTime}
            //strong !{statusText}
      h3.text-center.online Online
      div.well#participants_online
