doctype html
html
    include includes/head.jade
    script(src='/js/jquery.cookie.js')
    script(src='/js/monperformance_ui.js')
    title SSNoC - Performance Test
    body
        include includes/navbar.jade
        div.container
            br
            div(class="alert alert-danger" role="alert" id="alertBar")
            br
            div.input-group.input-group-sm
              span.input-group-addon Test Seconds
              input(id="testTime" type="text" class="form-control" placeholder="no more than 5 sec")
            div.input-group.input-group-sm
                span.input-group-addon Test Message
                input(id="testMsg" type="text" class="form-control" placeholder="any text more than 20 characters")
            //div.input-group.input-group-sm
            //    span.input-group-addon Message NO.
            //    input(id="testNumber" type="text" class="form-control" placeholder="large number can cause test down")
