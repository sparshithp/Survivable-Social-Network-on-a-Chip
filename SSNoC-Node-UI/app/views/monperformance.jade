            //    span.input-group-addon Req Interval.
            //    input(id="reqInterval" type="text" class="form-control" placeholder="interval of sending req in milliseconds")
            br
            div.btn-group
                button(class="btn btn-success" id="btn_start" )
                    strong Start
                button(class="btn btn-danger"  id="btn_stop" )
                    strong Stop
                //button(class="btn btn-primary" id="btn_view" )
                //    strong view
            br
            div#spinner
                label#spinner_txt
                    Strong  Start Testing...
                img(src="/img/spinner.gif" id="img-spinner" alt="Loading" height=30 label="Start Monitor...")
            br

            div(class="panel panel-primary" id = "resultContainer")
                div(class="panel-heading")
                    label
                        | Processed Requests Result

                table(id="resultTable" class="table" )
                    thead
                       tr
                         td Total Posts
                         td Posts Per Sec
                         td Total Gets
                         td Gets Per Sec
                    tr
                      td
                        div(id = "totalPostDiv")
                      td
                        div(id = "postDiv")
                      td
                        div(id = "totalGetDiv")
                      td
                        div(id = "getDiv")

